<%- include('./partials/header.ejs') %>
<div class="content">
    <form method="POST" action="/items/<%= item.id%>?_method=PUT" class="new-form">
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/png, image/jpeg" value="<%= item.image %>">

        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= item.price %>" step=0.01>
    </form>
</div>
