<%- include('../partials/header.ejs') %>
        <main>
            <div class="container-sm" id="displayedItem">
                <div class="container-sm" id="itemBigImg">
                    <img class="itemShowImg" src="../images/<%-item.image%>" alt="itemBigImg">
                </div>
                <br>

                <%= console.log(item) %>
                <div class="container-sm" id="itemInfoBtns">
                    <p><%= item.name %> - <%= item.condition %></p>
                    <p><%= item.category %> - <%= item.subcategory %></p>
                    <p>$<%= item.price %> - Total Offers: <%= item.totalOffers %></p>
                    <p>Posted: <%= item.posted %></p>
                    <p><%= item.details %></p>
                </div>
                <div class="container-sm" id="itemEditDelete">
                    <form>
                        <button type="submit" formmethod="GET" formaction="/items/<%= item.id %>/edit">Edit</button>
                        <button type="submit" formmethod="POST" formaction="/items/<%= item.id %>?_method=DELETE">Delete</button>
                    </form>
                </div>
            </div>
        </main>
<%- include('../partials/footer.ejs') %>