<%- include('../partials/header.ejs') %>
        <main>
            <div class="newItemContainer">
                <div class="container-sm content" id="newItemInputContainer">
                    <form action="/items" method="POST" class="new-form">
                        <div class="container-sm" id="formContainer">
                            <label id="parameter" for="name">Name -- </label>
                            <input type="text" id="name" name="name" enctype="multipart/form-data" required><br>
                        </div>
                        <br>
                        <div class="container-sm" id="formContainer">
                            <label id="parameter" for="price">Price ($) -- </label>
                            <input type="number" id="price" name="price" required><br>
                        </div>
                        <br>
                        <div class="container-sm" id="formContainer">
                            <label id="parameter" for="condition">Condition -- </label>
                            <select id="condition" name="condition">
                                <option value="NM">Near Mint</option>
                                <option value="LP">Lightly Played</option>
                                <option value="MP">Moderately Played</option>
                                <option value="HP">Heavily Played</option>
                                <option value="DM">Damaged</option>
                            </select>
                        </div>
                        <br>
                        <div class="container-sm" id="formContainer">
                            <label id="parameter" for="category">Category -- </label>
                            <select id="category" name="category">
                                <option value="TCG">TCG</option>
                                <option value="Sports">Sports</option>
                                <option value="Playing">Playing</option>
                            </select>
                        </div>
                        <br>
                        <div class="container-sm" id="formContainer">
                            <label id="parameter" for="subcategory">Subcategory -- </label>
                            <input type="text" id="subcategory" name="subcategory"><br>
                        </div>
                        <br>
                        <div class="container-sm" id="formContainer">
                            <label id="parameter" for="details">Details -- </label>
                            <textarea id="details" name="details" rows="5" columns="50"></textarea>
                        </div>
                        <input type="submit" value="Submit"></button>
                    </form>
                </div>
            </div>
        </main>
<%- include('../partials/footer.ejs') %>